<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ImageView
        android:id="@+id/user_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/user_backgroundpic"
        android:adjustViewBounds="true"/>

    <ImageView
        android:id="@+id/user_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/user_samplepic"/>

    <TextView
        android:layout_below="@+id/user_pic"
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="최서정"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"/>
    <TextView
        android:layout_below="@+id/user_name"
        android:id="@+id/user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="cchloe2311@daum.net"
        android:textSize="15dp"
        android:textColor="#B5B1B1"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_id"
        android:layout_centerHorizontal="true"
        android:gravity="center">

        <TextView
            android:id="@+id/user_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카카오내비 사용"
            android:textColor="#B5B1B1"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/user_edit_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:src="@drawable/user_change_app"
            android:onClick="editUserApp"/>
    </LinearLayout>

</RelativeLayout>